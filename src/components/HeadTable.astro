---
interface Props {
  typeHead?: "general" | "byCommunity" | "filters";
}
const headTable = ["N° Com", "tipo", "nombres", "Observaciones", "Lugar Conv."];
const headFilters = ["N° Com", "Parroquia", "Tipo", "Nombres", "Hospedaje"];

const headByCommunity = [
  "Matrimonios",
  "Solteros",
  "Solteras",
  "observaciones",
];

const { typeHead = "general" } = Astro.props;
---

{
  typeHead === "byCommunity" ? (
    <thead>
      <tr>
        {headByCommunity.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : typeHead === "filters" ? (
    <thead>
      <tr>
        {headFilters.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : (
    <thead>
      <tr>
        {headTable.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  )
}

<style>
  @media print {
    th {
      padding-block: 3px;
    }
  }
</style>
