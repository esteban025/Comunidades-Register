---
interface Props {
  typeHead?:
    | "general"
    | "resume"
    | "filters"
    | "catequistas"
    | "filterHospedaje";
}
const headTable = ["N° Com", "tipo", "nombres", "Observaciones", "Lugar Conv."];
const headFilters = ["N° Com", "Parroquia", "Tipo", "Nombres", "Hospedaje"];
const headFiltersHospedaje = [
  "N° Com",
  "Parroquia",
  "Tipo",
  "Nombres",
  "N° Habit",
];

const headCatequistas = ["Nombres", "Tipo", "Observaciones", "Hospedaje"];

const headResume = [
  "Parroquia",
  "N° Comunidades",
  "Matrimonios",
  "Solteros",
  "Solteras",
  "Total Personas",
];

const { typeHead = "general" } = Astro.props;
---

{
  typeHead === "resume" ? (
    <thead>
      <tr>
        {headResume.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : typeHead === "filters" ? (
    <thead>
      <tr>
        {headFilters.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : typeHead === "catequistas" ? (
    <thead>
      <tr>
        {headCatequistas.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : typeHead === "filterHospedaje" ? (
    <thead>
      <tr>
        {headFiltersHospedaje.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : (
    <thead>
      <tr>
        {headTable.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium capitalize truncate">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  )
}

<style>
  @media print {
    th {
      padding-block: 3px;
    }
  }
</style>
