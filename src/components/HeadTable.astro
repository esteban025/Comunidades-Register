---
interface Props {
  typeHead?: "general" | "byCommunity";
}
const headTable = [
  "N° Com",
  "Matrimonios",
  "Solteros",
  "Solteras",
  "Total",
  "Observaciones",
  "Lugar Conv.",
];

const headByCommunity = [
  "Matrimonios",
  "Solteros",
  "Solteras",
  "observaciones",
];

const { typeHead = "general" } = Astro.props;
---

{
  typeHead === "general" ? (
    <thead>
      <tr>
        {headTable.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  ) : (
    <thead>
      <tr>
        {headByCommunity.map((header) => (
          <th class="bg-sky-600 text-white p-1.5 text-start text-xs font-medium">
            {header}
          </th>
        ))}
      </tr>
    </thead>
  )
}

<style>
  th:nth-child(1) {
    width: 2%;
  } /* N° Com */
  th:nth-child(2) {
    width: 23%;
  } /* Matrimonios */
  th:nth-child(3) {
    width: 18%;
  } /* Solteros */
  th:nth-child(4) {
    width: 18%;
  } /* Solteras */
  th:nth-child(5) {
    width: 2%;
    /* alianmos al centro */
  } /* Total */
  th:nth-child(6) {
    width: 20%;
  } /* Observaciones */
  th:nth-child(7) {
    width: 20%;
  } /* Lugar Conv. */
</style>
